///////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////
//   2.0 - Globals
///////////////////////////////////////////////////////////

*
  box-sizing border-box

body
  font-family $raleway

img
  max-width 100%
  height auto

.btn
  border-radius 0
  box-shadow 0 4px 11px -2px rgba(0,0,0,0.4)
  transition 0.3s all
  &:hover
    transition 0.3s all

.btn-info
  background-color $light_blue
  border-color darken($light_blue, 20%)

  &:hover
    background-color darken($light_blue, 20%)
    border-color darken($light_blue, 40%)

.btn-success
  background-color $pale_green
  border-color darken($pale_green, 20%)

  &:hover
    background-color darken($pale_green, 20%)
    border-color darken($pale_green, 40%)

.btn-danger
  background-color $dark_orange
  border-color darken($dark_orange, 10%)

  &:hover
    background-color darken($dark_orange, 10%)
    border-color darken($dark_orange, 20%)

.btn-warning
  background-color $light_orange
  border-color darken($light_orange, 10%)

  &:hover
    background-color darken($light_orange, 10%)
    border-color darken($light_orange, 20%)



