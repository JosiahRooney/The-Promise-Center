// Colors
$light_orange = #f59f00
$dark_orange = #e05d39
$pale_green = #819152
$light_blue = #00c4fe

// Fonts
$raleway = 'Raleway', sans-serif
$josefin = 'Josefin Slab', serif
$sedgwick = 'Sedgwick Ave', cursive
$gloria = 'Gloria Hallelujah', cursive


